                    }
                }
            ]
        },
        {
            "name": "taglib",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://taglib.github.io/releases/taglib-2.1.1.tar.gz",
                    "sha256": "3716d31f7c83cbf17b67c8cf44dd82b2a2f17e6780472287a16823e70305ddba",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1982,
                        "stable-only": true,
